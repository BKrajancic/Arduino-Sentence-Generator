{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build tests",
            "command": "g++",
            "args": [
                "-O0",
                "-g",
                "${workspaceFolder}/main_test.cpp",
                "-I",
                "/usr/local/include/",
                "-L",
                "/usr/local/lib/",
                "-D",
                "BOOST_TEST_DYN_LINK",
                "-l",
                "boost_unit_test_framework",
                "-std=c++2a",
                "-o",
                "${workspaceFolder}/main_test",
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "g++ build main",
            "command": "g++-9",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "-I",
                "/usr/local/include/",
                "-L",
                "/usr/local/lib/",
                "-std=c++2a",
                "-pedantic",
                "-Wall",
                "-Wextra",
                "-Wcast-align",
                "-Wcast-qual",
                "-Wctor-dtor-privacy",
                "-Wdisabled-optimization",
                "-Wformat=2",
                "-Winit-self",
                "-Wlogical-op",
                "-Wmissing-declarations",
                "-Wmissing-include-dirs",
                "-Wnoexcept",
                "-Wold-style-cast",
                "-Woverloaded-virtual",
                "-Wredundant-decls",
                "-Wshadow",
                "-Wsign-conversion",
                "-Wsign-promo",
                "-Wstrict-null-sentinel",
                "-Wstrict-overflow=5",
                "-Wswitch-default",
                "-Wundef",
                "-Werror",
                "-Wno-unused",
                "-o",
                "${workspaceFolder}/main.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}